---
layout: master
---      
.col.col2.post_content
  h1= document.title
  p
    strong.date= document.date
  != content
  if document.rel != null
      each rel in document.rel
        a.btn.vfx(href=rel, target="_blank")
          =rel.split('://')[1]
  .tags
    each tag in document.tags
      li= tag.split(' ').join('-').split('.').join('-')
.col.col1
  ul.slides
    if document.youtube
      li
        iframe(src="//www.youtube.com/embed/"+document.youtube, width="720", height="480", frameborder="0", allowfullscreen="allowfullscreen")
    if document.vimeo
      li
        iframe(src="http://player.vimeo.com/video/"+document.vimeo+"?portrait=0", width="720", height="480", frameborder="0", webkitAllowFullScreen="webkitAllowFullScreen", mozallowfullscreen="mozallowfullscreen", allowFullScreen="allowFullScreen")
    if document.video
      li
        video(width="720", autoplay="autoplay", loop="loop", controls="controls")
          source(src=document.video, type="video/mp4")

    for file in getDocument().getAssociatedFiles().toJSON()
      li
        img(src=file.url, title=file.name, class=typeof document.outlines === "undefined" ? "" : "outlined")